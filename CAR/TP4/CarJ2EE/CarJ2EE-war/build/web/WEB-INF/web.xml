<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>BookList</servlet-name>
        <servlet-class>web.BookList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InitDB</servlet-name>
        <servlet-class>web.InitDB</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookSearch</servlet-name>
        <servlet-class>web.BookSearch</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthorList</servlet-name>
        <servlet-class>web.AuthorList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserCreator</servlet-name>
        <servlet-class>web.UserCreator</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookCreator</servlet-name>
        <servlet-class>web.BookCreator</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Authentification</servlet-name>
        <servlet-class>web.Authentification</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddInCart</servlet-name>
        <servlet-class>web.AddInCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Checkout</servlet-name>
        <servlet-class>web.Checkout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveFromCart</servlet-name>
        <servlet-class>web.RemoveFromCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookList</servlet-name>
        <url-pattern>/BookList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InitDB</servlet-name>
        <url-pattern>/InitDB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookSearch</servlet-name>
        <url-pattern>/BookSearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthorList</servlet-name>
        <url-pattern>/AuthorList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserCreator</servlet-name>
        <url-pattern>/UserCreator</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookCreator</servlet-name>
        <url-pattern>/BookCreator</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Authentification</servlet-name>
        <url-pattern>/Authentification</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddInCart</servlet-name>
        <url-pattern>/AddInCart</url-pattern>
    </servlet-mapping>
